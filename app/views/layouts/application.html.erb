<!DOCTYPE html>
<html>
<head>
  <title>Depot</title>
  <%= javascript_include_tag "application" %>
  <%= stylesheet_link_tag    "depot", :media => "all" %>
  <%= csrf_meta_tags %>
</head>
<body id="store">
    <div id="banner">
        <%= image_tag("logo.png") %>
        <%= @page_title || "Bookshelf" %>
    </div>
    <div id="columns">
        <div id="side">
            <%= link_to 'Home', store_url %><br />
            <a href="http://www.../faq">Questions</a><br />
            <a href="http://www.../news">News</a><br />
            <a href="http://www.../contact">Contact</a><br />
            <div id="cart"> <%= render @cart if @cart %> </div>
        </div>
        <div id="main">
            <%= yield %>
        </div>
    </div>
</body>
</html>
